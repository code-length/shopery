#
# Build the docker image with `npx nx docker-build be-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t be-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system be-api && \
          adduser --system -G be-api be-api

COPY dist/apps/be-api be-api/
RUN chown -R be-api:be-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix be-api --omit=dev -f install

CMD [ "node", "be-api" ]
